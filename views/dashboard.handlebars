<div class="row">
  <div class="col-auto">
    <h2>Welcome, <span style="color:#FFCC00;">{{user}}</span>!</h2>
  </div>
</div>

<div class="row mt-4">
  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Your Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-12">
        <h4><a href="api/posts/{{post.id}}">{{post.name}}</a></h4>
        <p>
          {{post.description}}
        </p>
      </div>
      <form class="form">
        <div class="form-group">
          <label for="post-desc">description:</label>
          <textarea class="form-input" id="post-desc" name="post-desc" placeholder="Edit your post here..." data-text="{{post.id}}"></textarea>
        </div>
        <div class="form-group">
          <button type="button" class="edit-post-form btn btn-primary" data-id="{{post.id}}">UPDATE</button>
          <button type="button" class="del-post-form btn btn-primary" data-id="{{post.id}}">DELETE</button>
        </div>
      </form>
    </div>
    {{/each}}
  </div>
  {{/if}}

  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form">
      <div class="form-group">
        <label for="new-post-name">post name:</label>
        <input class="form-input" type="text" id="new-post-name" placeholder="Enter your new post name..." name="post-name" />
      </div>
      <div class="form-group">
        <label for="new-post-desc">description:</label>
        <textarea class="form-input" id="new-post-desc" placeholder="Enter your new post here..." name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="button" class="new-post-form btn btn-primary">CREATE</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/dashboard.js"></script>
