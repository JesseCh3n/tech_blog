<div class="text-center">
  <h2>
    <span><i class="material-icons" style="font-size:48px;color:#cc1e4a;">cloud</i></span>
    <span>{{post.name}}</span>
  </h2>
  <p>{{post.description}}</p>
  <p>Created by <span style="color:#FFCC00;">{{post.user.name}}</span> on {{format_date post.date_created}}</p>
  <h3>Comments</h3>
  <div class="row mb-4 comment">
    {{#each post.comments as |comment|}}
    <div class="col-md-5">
      <p>
        {{comment.description}}
      </p>
    </div>
    <div class="col-md-7">
      <p>Posted by <span style="color:#FFCC00;">{{comment.user.name}}</span> on {{format_date comment.date_created}}</p>
    </div>
    {{/each}}
  </div>
  {{#if logged_in}}
  <form class="form">
    <div class="form-group">
      <label for="comment-body">description:</label>
      <textarea class="form-input" id="comment-body" placeholder="Enter your comment here..."></textarea>
    </div>

    <div class="form-group">
      <button type="button" class="comment-form btn btn-primary" style="flex-basis: 100%;" data-id="{{post.id}}">ADD COMMMENT</button>    
    </div>
  </form>
  {{/if}}
</div>

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}
