<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <span><i class="material-icons" style="font-size:48px;color:#cc1e4a;">cloud</i></span>
      <a href="/api/posts/{{id}}">{{name}}</a>
    </h2>
    <p>Posted by <span style="color:#FFCC00;">{{user.name}}</span> on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{description}}
    </p>
  </div>
</div>